<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
    <h2>User Info</h2>
    <%= image_tag current_user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
      <%= link_to "編集", root_path, class: "btn btn-outline-secondary btn-block" %>
      </div>

      <%= render 'new', book: @book %>
    </div>

    <!--Book一覧始まり-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th class="colspan"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image(100,100) %><%= link_to book.user.name, user_path(book.id) %></td>
            <td><%= link_to book.title,  book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <!--Book一覧終わり-->

  </div>
</div>