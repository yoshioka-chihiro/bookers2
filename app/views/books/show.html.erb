<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'user_info', book: @book %>
      <%= render 'new', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td><%= image_tag @book.user.get_profile_image(100,100) %><p><%= link_to @book.user.name, user_path(@book.id) %></p></td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <td><%= link_to 'edit', edit_book_path, class: 'btn btn-sm btn-success edit_book_1938' %></td>
            <td><%= link_to 'destroy', book_path(@book), method: :delete,  "data-confirm" => "本当に削除しますか？", class: 'btn btn-sm btn-danger destroy_book_1938' %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
