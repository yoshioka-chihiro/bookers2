<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
        <%= form_with model: @book, url: "/books/#{@book.id}", method: :patch do |f| %>
        <div class="form-group">
         <h4>Title</h4>
         <%= f.text_field:title %>
        </div>
        <div class="form-group">
          <h4>Opinipn</h4>
         <%= f.text_area:body %>
        </div>
        <div class="form-group">
         <%= f.submit 'Update Book', :class => "btn btn-success" %>
        </div>
        <% end %>
      <%= link_to "Show",  "/books/#{@book.id}" %>
      <span>ï½œ</span>
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>