<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'user_info', user: @user %>
      <%= render 'books/new', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tobody>
          <% @books.each do |book| %>
          <tr>
            <!--ユーザーの詳細ページに飛ぶ-->
            <td>
              <%= link_to "/users/#{@user.id}" do %>
                <%= image_tag @user.get_profile_image(80,80) %>
              <% end %>
            </td>
            <!--投稿の詳細ページに飛ぶ-->
            <td><%= link_to book.title, "/books/#{book.id}" %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tobody>
      </table>
    </div>
  </div>
</div>
